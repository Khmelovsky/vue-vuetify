.blog-page
  .posts-main
    display: flex
    flex-flow: row wrap
  .post_item
    display: block
    width: 100%
    .post_bg
        height: 100%
        background-size: cover
        background-repeat: no-repeat
        background-position: 50%
    &.post-large
      height: 375px
      margin-bottom: 26px
      .post_details__title
        font-family: $font-heavy
        color: $color-white
        font-size: 32px
        line-height: 32px
        letter-spacing: 0.4px
        margin-bottom: 10px
    &.post-small
      width: calc(50% - 13px)
      height: 243px
      margin-bottom: 26px
      &:nth-child(2n + 1)
        margin-left: 26px
    &__inner
      position: relative
      width: 100%
      height: 100%
    .post_bg
      position: relative
    .post_details
      position: absolute
      left: 0
      right: 0
      bottom: 0
      padding: 32px 24px 24px 32px
      .excerpt
        font-family: $font-light
        color: $color-white
        font-size: 15px
        line-height: 24px
        letter-spacing: 0.32px
        padding-bottom: 24px
      .date
        font-family: $font-light
        text-transform: uppercase
        color: $color-white
        font-size: 15px
        line-height: 28px
        letter-spacing: 0.32px
        margin-left: auto
      &__info
        display: flex
        align-items: flex-end
 


      
        
    
